@model InventoryBook.Common.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <select asp-for="Condition" class="form-control">
                    @if (Model?.Condition == Condition.Broken)
                    {
                        <option value="@Condition.Broken" selected>Broken</option>
                    }
                    else
                    {
                        <option value="@Condition.Broken">Broken</option>
                    }
                    @if (Model?.Condition == Condition.Applied)
                    {
                        <option value="@Condition.Applied" selected>Applied</option>
                    }
                    else
                    {
                        <option value="@Condition.Applied">Applied</option>
                    }
                    @if (Model?.Condition == Condition.Abandoned)
                    {
                        <option value="@Condition.Abandoned" selected>Abandoned</option>
                    }
                    else
                    {
                        <option value="@Condition.Abandoned">Abandoned</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryViewModel.Name" class="control-label"></label>
                <input asp-for="CategoryViewModel.Name" class="form-control" />
                <span asp-validation-for="CategoryViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
